---
import "../styles/global.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Smoother from "../components/Smoother.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width"
        />
        <meta
            name="description"
            content={description}
        />
        <meta
            name="generator"
            content={Astro.generator}
        />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/favicon.svg"
        />
        <title>{title}</title>
    </head>
    <body class="bg-gray-900 text-gray-100 font-sans antialiased">
        <div id="app-wrapper">
            <Smoother>
                <Header />
                <main id="app-main">
                    <slot />
                </main>
                <Footer />
            </Smoother>
        </div>
    </body>
</html>
