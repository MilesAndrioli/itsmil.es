<div id="app-loader">
    <span class="app-loader__back text-7xl font-serif uppercase font-semibold">
        Loading...
    </span>
    <span class="app-loader__front text-7xl font-serif uppercase font-semibold">
        Loading...
    </span>
</div>

<script>
    document.body.classList.add("PAGE-IS--LOADING");

    window.addEventListener(
        "load",
        () => {
            document.body.classList.remove("PAGE-IS--LOADING");
            document.body.classList.add("PAGE-HAS--LOADED");

            const loader = document.getElementById("app-loader");

            if (loader) {
                loader.addEventListener(
                    "transitionend",
                    () => {
                        loader.remove();
                    },
                    { once: true }
                );
            }
        },
        { once: true }
    );
</script>

<style>
    #app-loader {
        position: fixed;
        z-index: var(--loader-layer);
        top: 0;
        left: 0;

        height: 100%;
        width: 100%;
        padding: 5rem;
        background-color: light-dark(white, black);

        display: flex;
        align-items: end;
        justify-content: end;

        transition: opacity var(--in-out--giga-slow);
    }

    body.PAGE-HAS--LOADED #app-loader {
        opacity: 0;
    }

    /* Loader Animation */
    .app-loader__back,
    .app-loader__front {
        --starting-opacity: 10%;
    }

    .app-loader__back {
        opacity: var(--starting-opacity);
        position: absolute;
    }

    .app-loader__front {
        animation: clipLeft2Right 1600ms infinite var(--ease-in-out);
    }

    @keyframes clipLeft2Right {
        0% {
            opacity: var(--starting-opacity);
            clip-path: polygon(0% 0%, 0% 0%, 0% 100%, 0% 100%);
        }
        50% {
            opacity: 100%;
            clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
        }
        100% {
            opacity: var(--starting-opacity);
            clip-path: polygon(100% 0%, 100% 0%, 100% 100%, 100% 100%);
        }
    }
</style>
